block variables
    - var title = 'Vanzer'
block content
    header.header
        .container
            .header__container
                .logo
                .menu
                    span
                    span
                    span
                .fullscreenNavigation
                    nav.fullscreenNavigation__nav
                        ul
                            li
                                a(href='#homeSection') Home
                            li
                                a(href='#aboutSection') About us
                            li
                                a(href='#servicesSection') Services
                            li
                                a(href='#portfolioSection') Portfolio
                            li
                                a(href='#blogSection') Blog
