    main(id="main").main
        nav.navigation
            ul.pagination
                li.active
                    span.pagination__number 01
                    a(href='#homeSection').pagination__info
                        span.circle
                        span.pagination__name Home
                li.black
                    span.pagination__number 02
                    a(href='#aboutSection').pagination__info
                        span.circle
                        span.pagination__name About us
                li
                    span.pagination__number 03
                    a(href='#servicesSection').pagination__info
                        span.circle
                        span.pagination__name Services
                li
                    span.pagination__number 04
                    a(href='#portfolioSection').pagination__info
                        span.circle
                        span.pagination__name Portfolio
                li.black
                    span.pagination__number 05
                    a(href='#blogSection').pagination__info
